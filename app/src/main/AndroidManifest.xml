<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EjemploApi">
        <activity
            android:name=".Principal"
            android:exported="false"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.EjemploApi" />
        <activity
            android:name=".Registro"
            android:exported="false"
            android:label="@string/title_activity_registro"
            android:theme="@style/Theme.EjemploApi" />
        <activity
            android:name=".LoginFirebase"
            android:exported="false"
            android:label="@string/title_activity_login_firebase"
            android:theme="@style/Theme.EjemploApi" />
        <activity
            android:name=".FormularioLogin"
            android:exported="false"
            android:label="@string/title_activity_formulario_login"
            android:theme="@style/Theme.EjemploApi" />
        <activity
            android:name=".DatosDelPokemon"
            android:exported="false"
            android:label="@string/title_activity_datos_del_pokemon"
            android:theme="@style/Theme.EjemploApi" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EjemploApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>